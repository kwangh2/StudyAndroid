<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".melon.melonFragment"
    android:orientation="horizontal">


    <ImageView
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:id="@+id/img_cover"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <LinearLayout
        android:id="@+id/chart"
        android:layout_alignTop="@id/img_cover"
        android:layout_toRightOf="@id/img_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/chartNum"
            android:gravity="center"
            android:text="1"
            android:layout_toRightOf="@id/img_cover"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="-"/>

    </LinearLayout>
    <LinearLayout
        android:layout_alignTop="@id/chart"
        android:layout_toRightOf="@id/chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/songName"
            android:gravity="center"
            android:text="Perfect Night"
            android:layout_toRightOf="@id/img_cover"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/SingerName"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="LE SSERAFIM"/>

    </LinearLayout>
    <LinearLayout
        android:layout_alignTop="@id/img_cover"
        android:layout_toRightOf="@id/img_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:gravity="center"
            android:text="1"
            android:layout_toRightOf="@id/img_cover"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="-"/>

    </LinearLayout>
    <ImageView
        android:layout_centerVertical="true"
        android:src="@drawable/play_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"/>

</RelativeLayout>