<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_exam"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/v1"
        android:background="@drawable/shape_exam2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <View
        android:id="@+id/v2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/shape_external"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <ImageView
        android:src="@drawable/ic_baseline_smartphone_24"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="208dp"
        android:background="@drawable/selector_exam"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="105dp" />


</androidx.constraintlayout.widget.ConstraintLayout>