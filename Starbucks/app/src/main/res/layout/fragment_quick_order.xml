<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="180dp"
    android:backgroundTint="#EFEFEF"
    app:cardCornerRadius="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_alignParentLeft="true"
                android:id="@+id/card"
                android:layout_margin="20dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="100dp"
                >
                <ImageView
                    android:id="@+id/imgv_quickorder"
                    android:src="@drawable/menu_minttea"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_toRightOf="@+id/card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true">
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_quickorder_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="유자 민트 티"/>
                <TextView
                    android:id="@+id/tv_quickorder_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HOT | Venti"/>
            </LinearLayout>
            <ImageView
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#737373"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/vp_qo_lct"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_location_on_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_vp_qo_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="광주 금호점"
                android:layout_toRightOf="@id/vp_qo_lct"
                android:textColor="#8A3535"
                />
            <androidx.cardview.widget.CardView
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                app:cardCornerRadius="30dp">
                <Button
                    android:background="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="바로 주문하기"
                    android:textSize="10dp"
                    android:textColor="@color/white"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>